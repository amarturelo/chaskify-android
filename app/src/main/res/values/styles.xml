<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:tint">#FFFFFF</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ChaskifyButton">
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/selector_chaskify_button</item>
        <item name="android:textColor">@color/chaskify_button_text_color</item>
    </style>

    <style name="ChaskifyEditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_chaskify_edittext</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
